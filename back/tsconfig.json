{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@api/*": ["api/*"],
      "@database/*": ["database/*"],
      "@errors/*": ["common/errors/*"],
      "@common/*": ["common/*"],
      "@logger/*": ["logger/*"],
      "@firebase/*": ["firebase/*"]
    }
  },
  "include": ["src"],
  "lib": ["es2015"]
}